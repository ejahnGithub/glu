// Example of a function declaration
fn add(a: i32, b: i32) -> i32 {
    return a + b;
}

// Example of a struct declaration
struct Person {
    age: Int,
    height: Float,
}

// Example of a variable declaration
let p: Point = Point { x: 1.0, y: 2.0 };

// Example of an if statement
if p.x > 0.0 {
    p.y = p.y + 1.0;
} else {
    p.y = p.y - 1.0;
}

// Example of a while loop
while p.x < 10.0 {
    p.x = p.x + 1.0;
}

// Example of a break statement
while true {
    break;
}

// Example of a continue statement
while p.x < 20.0 {
    if p.x == 15.0 {
        continue;
    }
    p.x = p.x + 1.0;
}

// Example of an expression statement
p.x + p.y;
