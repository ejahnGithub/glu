//
// RUN: gluc -c %s -o %t.o 2>&1 | FileCheck -v %s
//

// CHECK: warning: Variable 'flag' declared but not used
func warnUnusedVar() {
    var flag: Bool = true;

    return;
}

// CHECK-NOT: warning
func noWarnUnusedVar() {
    var flag: Bool = true;

    flag;
    return;
}

// CHECK: warning: Variable 'unused1' declared but not used
// CHECK-NOT: warning
// CHECK: warning: Variable 'unused3' declared but not used
func partialUse() {
    var unused1: Int = 10;
    var used: Int = 20;
    var unused3: Int = 30;

    used;

    return;
}
