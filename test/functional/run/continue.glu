func puts(s: String);

func testWhile() -> Void {
    var flag: Bool = true;
    var continueFlag: Bool = true;

    while flag {
        if (continueFlag) {
            continueFlag = false;
            puts("continue");
            continue;
        }
        puts("yes!");
        flag = false;
    }
}

// CHECK: continue
// CHECK: yes!
func main() -> Int {
    testWhile();
    return 0;
}
