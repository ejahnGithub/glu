@no_mangling func puts(s: *Char);

func testContinue() -> Void {
    var flag: Bool = true;
    var continueFlag: Bool = true;

    while flag {
        if (continueFlag) {
            continueFlag = false;
            puts("continue");
            continue;
        }
        puts("yes!");
        flag = false;
    }
}

// CHECK: continue
// CHECK: yes!
func main() -> Int {
    testContinue();
    return 0;
}
