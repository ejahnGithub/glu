import io::{print, printLine};

func intToStr(i: Int) -> String {
    if i == 0 { return "0"; }
    if i == 1 { return "1"; }
    if i == 2 { return "2"; }
    if i == 3 { return "3"; }
    if i == 4 { return "4"; }
    if i == 5 { return "5"; }
    if i == 6 { return "6"; }
    if i == 7 { return "7"; }
    if i == 8 { return "8"; }
    if i == 9 { return "9"; }
    return "<int>";
}

func printInt(i: Int) {
    printLine(intToStr(i));
}

func printBool(b: Bool) {
	if b {
		printLine("true");
	} else {
		printLine("false");
	}
}

func main() -> Int {
	let a: Int = 4;
	let b: Int = 1;

	let sum = a + b;
	// CHECK: sum: 5
	print("sum: ");
	printInt(sum);

	let diff = a - b;
	// CHECK: diff: 3
	print("diff: ");
	printInt(diff);

	let div = a / b;
	// CHECK: div: 4
	print("div: ");
	printInt(div);

	let eq1 = a == b;
	// CHECK: eq1: false
	print("eq1: ");
	printBool(eq1);
	let eq2 = a == a;
	// CHECK: eq2: true
	print("eq2: ");
	printBool(eq2);

	let neq1 = a != b;
	// CHECK: neq1: true
	print("neq1: ");
	printBool(neq1);
	let neq2 = a != a;
	// CHECK: neq2: false
	print("neq2: ");
	printBool(neq2);

	let and = a & b;
	// CHECK: and: 0
	print("and: ");
	printInt(and);

	let or = a | b;
	// CHECK: or: 5
	print("or: ");
	printInt(or);

	let xor = a ^ b;
	// CHECK: xor: 5
	print("xor: ");
	printInt(xor);

	let shl = a << b;
	// CHECK: shl: 8
	print("shl: ");
	printInt(shl);

	let shr = a >> b;
	// CHECK: shr: 2
	print("shr: ");
	printInt(shr);

	let compl = -~a;
	// CHECK: compl: 5
	print("compl: ");
	printInt(compl);
    return 0;
}
